(defsrc    
    caps
    spc
    tab
    ret
    k
    j
    h
    l
)

(defalias
    space_Super (tap-hold 1 150 spc lmet)
    escCtrl (tap-hold 1 150 esc lctrl)  
    tab_arrows(tap-hold 1 150 tab (layer-toggle arrows) ) 
    return_ctrl(tap-hold 1 150 ret rctrl)
)

(deflayer base
    @escCtrl
    @space_Super
    @tab_arrows
    @return_ctrl
    k
    j
    h
    l
)

(deflayer arrows
  _
  _
  _
  _
  up
  down
  left
  right
) 
